{
	"name": "node-express-mongodb-typescript",
	"version": "1.0.0",
	"description": "Node.js Express MongoDB TypeScript project with file change server",
	"main": "dist/server.js",
	"scripts": {
		"start": "node dist/server.js",
		"build": "tsc",
		"watch": "tsc -w",
		"dev": "ts-node-dev --respawn --transpile-only --no-notify -r tsconfig-paths/register src/server.ts",
		"prestart": "npm run build",
		"predev": "npm run build"
	},
	"keywords": [
		"node",
		"express",
		"mongodb",
		"typescript"
	],
	"author": "Your Name",
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.20.2",
		"chokidar": "^3.6.0",
		"dotenv": "^16.4.4",
		"express": "^4.18.2",
		"mongodb": "^6.3.0",
		"mongoose": "^8.1.3"
	},
	"devDependencies": {
		"@types/chokidar": "^2.1.3",
		"@types/express": "^4.17.21",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^20.11.19",
		"nodemon": "^3.0.3",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	}
}